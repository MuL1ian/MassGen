$terminal-success: #1a7f37;
$terminal-error: #cf222e;
$terminal-hover: #57606a;
$terminal-focus: #57606a;
$terminal-text: #57606a;

/* Thinking/Content Card Colors */
$thinking-border: #8c959f;
$content-border: #8c959f;
