$wizard-success: #1a7f37;
$wizard-selected-bg: #dafbe1;
$wizard-scrollbar: #d0d7de;
$wizard-scrollbar-hover: #afb8c1;
$wizard-scrollbar-active: #8c959f;
$wizard-error-bg: #ffebe9;

/* Tool Type Colors */
$tool-api: #a35200;
$tool-ai: #0969da;
$tool-memory: #1a7f37;
$tool-workspace: #1a7f37;

/* Terminal Tool Colors (muted for light theme) */
