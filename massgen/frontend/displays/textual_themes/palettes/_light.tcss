/* Diff Highlighting */
$diff-add-bg: #dafbe1;
$diff-remove-bg: #ffebe9;

/* Answer Selection */
$answer-selected-bg: #f6f8fa;
$answer-highlighted-bg: #ddf4ff;
$answer-highlight-bg: #ddf4ff;

/* Selected Item Borders */
$selected-blue: #0969da;
$selected-green: #1a7f37;
$selected-purple: #8250df;
$selected-orange: #bf5700;
$selected-cyan: #0969da;
$selected-pink: #bf3989;
$selected-yellow: #9a6700;
$selected-red: #cf222e;

/* Checkbox/Radio Selected State */
