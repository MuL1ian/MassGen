/* Prototype: Option H - Briefing Panel Pro
   Goal: Compact executive handoff card with high information density.
*/

Screen {
    background: #0d1117;
    color: #e6edf3;
}

.hidden {
    display: none;
}

TimelineSection {
    width: 100%;
    height: 100%;
    padding: 0;
    background: #0d1117;
}

TimelineSection.answer-locked {
    overflow-y: auto;
    padding: 0;
}

TimelineSection .answer-lock-hidden {
    display: none;
}

TimelineSection FinalPresentationCard.option-briefing-panel-pro.final-card-locked {
    width: 100%;
    height: auto;
    min-height: 14;
    max-height: 24;
    margin: 0;
}

FinalPresentationCard.option-briefing-panel-pro {
    width: 100%;
    height: auto;
    margin: 0;
    border: solid #30363d;
    background: #0d1117;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_header {
    width: 100%;
    height: 4;
    padding: 0 2;
    background: #161b22;
    border-bottom: solid #30363d;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_title {
    height: 1;
    color: #e6edf3;
    text-style: bold;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_winner {
    height: 1;
    color: #79c0ff;
    text-style: bold;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_votes {
    height: 1;
    color: #8b949e;
    border: none;
    margin: 0;
    padding: 0;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_body {
    width: 100%;
    height: auto;
    min-height: 8;
    max-height: 14;
    layout: horizontal;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_content {
    width: 1fr;
    height: auto;
    max-height: 14;
    padding: 1 2;
    background: #0d1117;
    color: #e6edf3;
    overflow-y: auto;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_stream,
FinalPresentationCard.option-briefing-panel-pro #final_card_text {
    margin: 0;
    color: #e6edf3;
}

FinalPresentationCard.option-briefing-panel-pro #file_explorer_panel {
    width: 44;
    min-width: 32;
    height: auto;
    max-height: 14;
    border-left: solid #30363d;
    padding: 0 1;
    background: #0f141b;
    color: #c9d1d9;
}

FinalPresentationCard.option-briefing-panel-pro #file_explorer_panel #file_tree_header {
    color: #79c0ff;
}

FinalPresentationCard.option-briefing-panel-pro #file_explorer_panel #file_tree {
    height: 1fr;
    max-height: 999;
}

FinalPresentationCard.option-briefing-panel-pro #file_explorer_panel #file_preview_header,
FinalPresentationCard.option-briefing-panel-pro #file_explorer_panel #file_preview {
    display: none;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_post_eval,
FinalPresentationCard.option-briefing-panel-pro #final_card_context_paths {
    display: none;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_footer {
    height: 2;
    background: #0f141b;
    border-top: solid #30363d;
    padding: 0 2;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_footer.hidden {
    display: none;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_buttons {
    width: 100%;
    height: 1;
}

FinalPresentationCard.option-briefing-panel-pro .footer-link {
    width: auto;
    height: 1;
    color: #79c0ff;
    text-style: underline;
    padding: 0 1;
}

FinalPresentationCard.option-briefing-panel-pro .footer-link:hover {
    color: #a5d6ff;
    text-style: bold underline;
}

FinalPresentationCard.option-briefing-panel-pro .verified-indicator {
    width: auto;
    display: block;
    color: #8b949e;
}

FinalPresentationCard.option-briefing-panel-pro #final_card_button_spacer {
    display: none;
    width: 0;
}

FinalPresentationCard.option-briefing-panel-pro #continue_message {
    display: none;
}
